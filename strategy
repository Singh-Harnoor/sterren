    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Competitor Section Logic
            const competitorCards = document.querySelectorAll('.competitor-card');
            const disadvantageTitle = document.getElementById('disadvantage-title');
            const disadvantageList = document.getElementById('disadvantage-list');

            const disadvantages = {
                social: {
                    title: 'Disadvantages: Social Media Giants',
                    points: [
                        'Content is fleeting, trend-driven, and overwhelming.',
                        'Algorithmically-driven feeds lack a curated, narrative depth.',
                        'Creative tools are generic and not tied to a core philosophy.',
                        'Monetization is often tied to virality, rewarding quantity over quality.'
                    ]
                },
                ar: {
                    title: 'Disadvantages: Niche AR Apps',
                    points: [
                        'Highly specialized and lack a community or entertainment component.',
                        'User experience is often a one-off gimmick with low retention.',
                        'Fail to offer a continuous reason to return once the novelty wears off.',
                        'Limited scope, focusing only on utility rather than creative expression.'
                    ]
                },
                stream: {
                    title: 'Disadvantages: Live Streaming Platforms',
                    points: [
                        'Primarily focused on a specific niche (e.g., gaming), lacking broad lifestyle appeal.',
                        'Lacks a strong, curated aesthetic or non-live creative component.',
                        'Built for a specific type of real-time engagement, not reflective artistry.',
                        'Can be intimidating for new creators and consumers.'
                    ]
                }
            };

            competitorCards.forEach(card => {
                card.addEventListener('click', () => {
                    competitorCards.forEach(c => c.classList.remove('active'));
                    card.classList.add('active');
                    const compId = card.id.split('-')[1];
                    const data = disadvantages[compId];
                    disadvantageTitle.textContent = data.title;
                    disadvantageList.innerHTML = data.points.map(p => `<li>${p}</li>`).join('');
                });
            });

            // Strategy Chart Logic
            const ctx = document.getElementById('strategyChart').getContext('2d');
            const strategyData = {
                labels: [
                    'Endless Scroll', 'Like Economy', 'Generic Tools', 'Content Quantity', 
                    'Noise & Clutter', 'Performance Pressure', 'Intentionality', 'Brand DNA', 
                    'AR as Core Tool', 'Curation', 'Canvas Profile', 'Duality Feed', 
                    '"In-Between" Moment', 'Phygital Commerce'
                ],
                datasets: [
                    {
                        label: 'Industry Standard',
                        data: [8, 9, 8, 9, 8, 7, 3, 2, 3, 3, 0, 0, 0, 0],
                        backgroundColor: 'rgba(200, 200, 200, 0.6)',
                        borderColor: 'rgba(200, 200, 200, 1)',
                        borderWidth: 1
                    },
                    {
                        label: 'Black & White™',
                        data: [0, 0, 0, 3, 2, 2, 9, 9, 10, 10, 10, 9, 9, 10],
                        backgroundColor: 'rgba(26, 26, 26, 0.8)',
                        borderColor: 'rgba(26, 26, 26, 1)',
                        borderWidth: 1
                    }
                ]
            };
            
            const initialData = JSON.parse(JSON.stringify(strategyData));

            const strategyChart = new Chart(ctx, {
                type: 'bar',
                data: strategyData,
                options: {
                    indexAxis: 'y',
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        x: {
                            beginAtZero: true,
                            max: 10,
                            title: { display: true, text: 'Level of Focus / Offering' }
                        },
                        y: {
                            ticks: { autoSkip: false }
                        }
                    },
                    plugins: {
                        legend: { position: 'top' },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.parsed.x !== null) {
                                        if(context.parsed.x === 0) label += 'Eliminated';
                                        else if (context.parsed.x <=3) label += 'Low';
                                        else if (context.parsed.x <=6) label += 'Medium';
                                        else label += 'High';
                                    }
                                    return label;
                                }
                            }
                        }
                    }
                }
            });

            const strategyBtns = document.querySelectorAll('.strategy-btn');
            const strategyTitle = document.getElementById('strategy-title');
            const strategyText = document.getElementById('strategy-text');
            const strategyInfo = {
                all: { title: 'Comparing Strategies', text: 'This shows the full comparison. The industry standard (gray) focuses on high quantity and virality, while Black & White™ (black) pivots to curation, narrative, and purpose-driven tools.' },
                eliminate: { title: 'Action: Eliminate', text: 'These factors, like the "like" economy and generic tools, are completely removed to create a more intentional and brand-focused user experience.' },
                reduce: { title: 'Action: Reduce', text: 'Factors like content quantity and performance pressure are significantly lowered to promote quality over volume and personal expression over public validation.' },
                raise: { title: 'Action: Raise', text: 'Core values like intentionality, brand DNA integration, and purposeful AR tools are raised far above the industry standard, becoming key differentiators.' },
                create: { title: 'Action: Create', text: 'Entirely new features and experiences that the industry has never offered. This is the foundation of the new market space.' },
            };
            const actionSlices = {
                eliminate: [0, 3],
                reduce: [3, 6],
                raise: [6, 10],
                create: [10, 14]
            };

            strategyBtns.forEach(btn => {
                btn.addEventListener('click', () => {
                    strategyBtns.forEach(b => b.classList.remove('active'));
                    btn.classList.add('active');
                    const action = btn.dataset.action;

                    strategyTitle.textContent = strategyInfo[action].title;
                    strategyText.textContent = strategyInfo[action].text;

                    if (action === 'all') {
                        strategyChart.data.labels = initialData.labels;
                        strategyChart.data.datasets[0].data = initialData.datasets[0].data;
                        strategyChart.data.datasets[1].data = initialData.datasets[1].data;
                    } else {
                        const [start, end] = actionSlices[action];
                        strategyChart.data.labels = initialData.labels.slice(start, end);
                        strategyChart.data.datasets[0].data = initialData.datasets[0].data.slice(start, end);
                        strategyChart.data.datasets[1].data = initialData.datasets[1].data.slice(start, end);
                    }
                    strategyChart.update();
                });
            });

            // Feature Card Logic
            const showExampleButtons = document.querySelectorAll('.show-example-btn');
            showExampleButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const exampleSection = button.nextElementSibling;
                    const isCurrentlyOpen = exampleSection.classList.contains('open');
                    
                    document.querySelectorAll('.example-section').forEach(sec => {
                        sec.classList.remove('open');
                        sec.previousElementSibling.textContent = 'Show Example →';
                    });

                    if (!isCurrentlyOpen) {
                        exampleSection.classList.add('open');
                        button.textContent = 'Hide Example →';
                    }
                });
            });
            
            // Nav Link Active State on Scroll
            const sections = document.querySelectorAll('section');
            const navLinks = document.querySelectorAll('.nav-link');
            
            window.addEventListener('scroll', () => {
                let current = '';
                sections.forEach(section => {
                    const sectionTop = section.offsetTop;
                    if (pageYOffset >= sectionTop - 100) {
                        current = section.getAttribute('id');
                    }
                });

                navLinks.forEach(link => {
                    link.classList.remove('active');
                    if (link.getAttribute('href').substring(1) === current) {
                        link.classList.add('active');
                    }
                });
            });

             // Smooth Scroll for Nav Links
            navLinks.forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    document.querySelector(this.getAttribute('href')).scrollIntoView({
                        behavior: 'smooth'
                    });
                });
            });

        });
    </script>
</body>
</html>
